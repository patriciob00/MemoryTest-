<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.memorytest" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TelaInicial"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NivelFacil"
            android:label="@string/title_activity_nivel_facil" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TelaInicial" />
        </activity>
        <activity
            android:name=".NivelMedio"
            android:label="@string/title_activity_nivel_medio" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TelaInicial" />
        </activity>
        <activity
            android:name=".NivelDificil"
            android:label="@string/title_activity_nivel_dificil" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TelaInicial" />
        </activity>
    </application>

</manifest>
