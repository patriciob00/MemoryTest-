                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"/>

           </TableRow>

           <TableRow
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <ImageButton
                   android:onClick="clickView"
                   android:paddingLeft="5dp"
                   android:paddingRight="5dp"
